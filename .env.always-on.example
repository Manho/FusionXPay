# Local always-on runtime profile (8GB host, target service memory around 4GB)
# Copy to .env.always-on and fill real values before deployment.

# Public gateway
API_GATEWAY_PORT=8080

# Core dependencies (reuse NAS middleware/services)
DB_HOST=192.168.1.10
DB_PORT=3306
DB_NAME=fusionxpay_db
DB_USERNAME=fusionxpay
DB_PASSWORD=replace_with_db_password

REDIS_HOST=192.168.1.11
REDIS_PORT=6379

KAFKA_BOOTSTRAP_SERVERS=192.168.1.12:9092
EUREKA_URL=http://192.168.1.13:8761/eureka

# Internal fallback URLs for service-to-service calls
ORDER_SERVICE_URL=http://order-service:8082
PAYMENT_SERVICE_URL=http://payment-service:8081
NOTIFICATION_SERVICE_URL=http://notification-service:8083
ADMIN_SERVICE_URL=http://admin-service:8084

# Authentication and payment providers
JWT_SECRET=replace_with_strong_secret
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=
PAYPAL_WEBHOOK_ID=
PAYPAL_MODE=sandbox
PAYPAL_BASE_URL=https://api-m.sandbox.paypal.com
PAYPAL_RETURN_URL=https://api.your-domain.com/api/v1/payment/paypal/return
PAYPAL_CANCEL_URL=https://api.your-domain.com/api/v1/payment/paypal/cancel

# Frontend redirect URLs for payment callbacks
PAYMENT_FRONTEND_SUCCESS_URL=https://your-frontend-domain.com/payment/success
PAYMENT_FRONTEND_CANCEL_URL=https://your-frontend-domain.com/payment/cancel
PAYMENT_FRONTEND_ERROR_URL=https://your-frontend-domain.com/payment/error

# Logging (keep INFO for long-running low-resource runtime)
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_COM_FUSIONXPAY=INFO
LOGGING_LEVEL_ORG_SPRINGFRAMEWORK=INFO
