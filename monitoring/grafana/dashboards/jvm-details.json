  "panels": [
    {
      "id": 1,
      "type": "timeseries",
      "title": "Heap Memory (Used / Committed / Max)",
      "datasource": {
        "type": "prometheus",
        "uid": "fusionxpay-prometheus"
      },
      "gridPos": {
        "h": 9,
        "w": 24,
        "x": 0,
        "y": 0
      },
      "targets": [
        {
          "expr": "sum by (job) (jvm_memory_used_bytes{job=~\"$service\",area=\"heap\"})",
          "legendFormat": "{{job}} used",
          "refId": "A"
        },
        {
          "expr": "sum by (job) (jvm_memory_committed_bytes{job=~\"$service\",area=\"heap\"})",
          "legendFormat": "{{job}} committed",
          "refId": "B"
        },
        {
          "expr": "sum by (job) (jvm_memory_max_bytes{job=~\"$service\",area=\"heap\"})",
          "legendFormat": "{{job}} max",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes"
        },
        "overrides": []
      },
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom"
        }
      }
    },
    {
      "id": 2,
      "type": "timeseries",
      "title": "GC Pause Duration (avg)",
      "datasource": {
        "type": "prometheus",
        "uid": "fusionxpay-prometheus"
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 9
      },
      "targets": [
        {
          "expr": "sum by (job) (rate(jvm_gc_pause_seconds_sum{job=~\"$service\"}[5m])) / clamp_min(sum by (job) (rate(jvm_gc_pause_seconds_count{job=~\"$service\"}[5m])), 1)",
          "legendFormat": "{{job}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "decimals": 4
        },
        "overrides": []
      },
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      }
    },
    {
      "id": 3,
      "type": "timeseries",
      "title": "Thread States",
      "datasource": {
        "type": "prometheus",
        "uid": "fusionxpay-prometheus"
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 9
      },
      "targets": [
        {
          "expr": "sum by (job, state) (jvm_threads_states_threads{job=~\"$service\"})",
          "legendFormat": "{{job}} {{state}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "stacking": {
              "group": "A",
              "mode": "normal"
            }
          }
        },
        "overrides": []
      },
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom"
        }
      }
    },
    {
      "id": 4,
      "type": "timeseries",
      "title": "CPU Usage",
      "datasource": {
        "type": "prometheus",
        "uid": "fusionxpay-prometheus"
      },
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 17
      },
      "targets": [
        {
          "expr": "100 * avg by (job) (process_cpu_usage{job=~\"$service\"})",
          "legendFormat": "{{job}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100
        },
        "overrides": []
      },
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom"
        }
      }
    }
  ],
