        },
        "definition": "label_values(up{job=~\"fusionxpay-.*\"}, job)",
        "query": {
          "query": "label_values(up{job=~\"fusionxpay-.*\"}, job)",
          "refId": "PrometheusVariableQueryEditor-VariableQuery"
        },
        "includeAll": true,
        "allValue": ".*",
        "refresh": 1,
        "current": {
          "selected": true,
          "text": "All",
          "value": ".*"
        }
      }
    ]
  },
  "time": {
    "from": "now-1h",
    "to": "now"
  },
